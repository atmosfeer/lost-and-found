<h1><%= @pet.name %></h1>
<h3><%= @pet.category %></h3>
<h4><%= @pet.address %></h4>
<% found_or_not = @pet.found ? "" : "not" %>
<h4><%= "This pet is #{found_or_not} found" %></h4>
<% if @pet.found %>
  <p><%= @pet.name %> was found on <%= @pet.found_at %></p>
<% else %>
  <%= link_to "Click here if you found this pet", mark_path(@pet) %>
<% end %>

<%= link_to "Back to home", pets_path  %>
